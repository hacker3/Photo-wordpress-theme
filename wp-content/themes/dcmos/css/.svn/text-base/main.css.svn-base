	text-decoration: none;
	text-transform: uppercase;
	letter-spacing: 1px;
	color: #fff;
}

#navigation a:active,
#navigation a:hover,
#navigation .current a,
#navigation .current a:visited {
	color: #666;
}

#navigation li:first-child {
	background: transparent;
}

#navigation li.important a,
#navigation li.important a:visited {
	background: #00a8ff url(../images/common/bg-menu-important.png) 0 0 repeat-x;
	-webkit-border-bottom-right-radius: 8px;
	-webkit-border-bottom-left-radius: 8px;
	-moz-border-radius-bottomright: 8px;
	-moz-border-radius-bottomleft: 8px;
	border-bottom-right-radius: 8px;
	border-bottom-left-radius: 8px;
}

#navigation li.important a:active,
#navigation li.important a:hover,
#navigation li.current.important a,
#navigation li.current.important a:visited {
	background-position: 0 -66px;
